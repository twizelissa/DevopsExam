{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2016",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "src/__tests__"]
}
